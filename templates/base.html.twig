<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
        {% endblock %}
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>
        {% endblock %}
    </head>
    <body>
    {% for mensaje in app.flashes('success') %}
        <div style="border: 1px solid black; background-color: darkolivegreen">
            {{ mensaje }}
        </div>
    {% endfor %}
    {% for mensaje in app.flashes('error') %}
        <div style="border: 1px solid black; background-color: darkred">
            {{ mensaje }}
        </div>
    {% endfor %}
    <ul class="navbar-nav ms-auto">
        <li class="me-auto">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="nav-link">Conectado como {{ app.user.email }}. Salir</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="nav-link">Entrar</a>
            {% endif %}
        </li>
    </ul>
        {% block body %}{% endblock %}
    </body>
</html>
