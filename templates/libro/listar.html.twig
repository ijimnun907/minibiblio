{% extends 'base.html.twig' %}

{% block title %} Libros {% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('libro_nuevo') }}" class="btn btn-secondary">Registrar nuevo libro</a>
    {% endif %}
    <table border="1px">
        <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>AÃ±o de Publicacion</th>
            <th>Paginas</th>
            <th>Editorial</th>
            <th>Socio</th>
            <th>Acciones</th>
        </tr>
        {% for libro in libros %}
            <tr>
                <td>{{ libro.id }}</td>
                <td><a href="{{ path('autores', {'id': libro.id}) }}">{{ libro.titulo }}</a></td>
                <td>{{ libro.anioPublicacion | date('d-m-Y') }}</td>
                <td>{{ libro.paginas }}</td>
                <td>{{ libro.editorial }}</td>
                {% if libro.socio %}
                    {% if is_granted('ROLE_DOCENTE') or is_granted('ROLE_BIBLIOTECARIO') %}
                        <td>{{ libro.socio }}</td>
                    {% else %}
                        <td>Prestado</td>
                    {% endif %}
                {% else %}
                    <td>No prestado</td>
                {% endif %}
                <td><a href="{{ path('libro_modificar', {'id': libro.id}) }}" class="btn btn-secondary">Modificar</a>{% if is_granted('ROLE_ADMIN') %}<a href="{{ path('libro_eliminar', {'id': libro.id}) }}" class="btn btn-secondary">Eliminar</a>{% endif %}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}