{% extends 'base.html.twig' %}

{% block title %}
Eliminar Socio
{% endblock %}

{% block body %}
    <h1>Eliminar Socio</h1>

    <div class="alert alert-danger">
        El socio {{ socio.nombre }} {{ socio.apellidos}} será eliminado.
        Esta acción no se puede deshacer!
    </div>

    <form method="post">
        <a href="{{ path('socio_listar') }}" class="btn btn-info">Volver al listado</a>
        <button type="submit" name="confirmar" class="btn btn-danger">Confirmar</button>
    </form>
{% endblock %}



