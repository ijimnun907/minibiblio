{% extends 'base.html.twig' %}

{% block title %} Socios listados {% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('socio_nuevo') }}" class="btn btn-secondary">Socio nuevo</a>
    {% endif %}

    <table border="1px">
        <tr>
            <th>Dni</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Es docente</th>
            <th>Es estudiante</th>
            <th>Tel√©fono</th>
            <th>Acciones</th>
        </tr>
        {% for socio in socios %}
            <tr>
                <td>{{ socio.dni }}</td>
                <td>{{ socio.nombre }}</td>
                <td>{{ socio.apellidos }}</td>
                <td>{{ socio.esDocente ? 'si' : 'no' }}</td>
                <td>{{ socio.esEstudiante ? 'si' : 'no' }}</td>
                <td>{{ socio.telefono }}</td>
                <td>{% if is_granted('SOCIO_EDIT', socio) %}<a href="{{ path('socio_modificar', {'id': socio.id}) }}" class="btn btn-secondary">Modificar</a>{% endif %}{% if is_granted('ROLE_ADMIN') %}<a href="{{ path('socio_eliminar', {'id': socio.id}) }}" class="btn btn-secondary">Eliminar</a>{% endif %}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}